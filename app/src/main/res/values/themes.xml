<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="MyTheme.DayNigth" parent="Base.MyTheme"/>

    <!-- Base application theme. -->
    <style name="Base.MyTheme" parent="Base.MaterialThemeBuilder">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_text_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_text_secondary</item>

        <item name="android:background">@color/color_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="imageButtonStyle">@style/Widget.MyTheme.ImageButton</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="fontFamily">@font/asul</item>

        


        <!-- Customize your theme here. -->
    </style>
    <style name="Base.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_secondary</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/color_text_secondary</item>
        <item name="backgroundTint">@color/color_secondary</item>
        <item name="iconTint">@color/color_primary</item>

    </style>
    <style name="Widget.MyTheme.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@null</item>


    </style>
    <style name="imageButton_variant">
        <item name="backgroundTint">@color/color_secondary</item>
        <item name="tint">@color/color_primary</item>


    </style>
    <style name="Widget.MyTheme.Text_variant" parent="Widget.AppCompat.TextView">

        <item name="android:textColor">@color/color_secondary</item>
    </style>

    <style name="texviewPrecio">
        <item name="android:textColor">@color/rojo_intenso</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="texviewNomProducto">

        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="buttonGuardarDespues" parent="Widget.MaterialComponents.Button.OutlinedButton" >
        <item name="android:textColor">@color/verde_1</item>
        <item name="strokeColor">@color/verde_1</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">8sp</item>
        <item name="iconTint">@color/verde_1</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>